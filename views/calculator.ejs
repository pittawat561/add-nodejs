<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/calculator.min.css">
</head>

<body>


    <nav class="navbar navbar-dark bg-dark">
        <div class="p-2">
            <!-- <img src="../image/nodejs.png" width="30" height="30" class="d-inline-block align-top" alt=""> -->
            <a style="color: aliceblue; font-size: larger; font-weight: bold;">NodeJS</a>
        </div>
        <div class="position-relative p-2">
            <a href="/logout" class="btn btn-danger ">Logout</a>
        </div>
    </nav>




    <div class="contener">

        <div class="card p-3">

            <div class="mb-3">
                <a href="/" class="btn btn-secondary">Home</a>
            </div>

            <div class="card-body">

                <div class="wrapper">

                    <section class="screen">
                        <div class="previous" data-operand-previous></div>
                        <div class="current" data-operand-current></div>
                    </section>

                    <section class="calc-btn_row">
                        <div class="calc_btn_row">
                            <button class="calc_btn double" data-all-clear>C</button>
                            <button class="calc_btn radius" data-delete>←</button>
                            <button class="calc_btn radius" data-operation>÷</button>
                        </div>

                        <div class="calc_btn_row">
                            <button class="calc_btn radius" data-number>7</button>
                            <button class="calc_btn radius" data-number>8</button>
                            <button class="calc_btn radius" data-number>9</button>
                            <button class="calc_btn radius" data-operation>x</button>
                        </div>

                        <div class="calc_btn_row">
                            <button class="calc_btn radius" data-number>4</button>
                            <button class="calc_btn radius" data-number>5</button>
                            <button class="calc_btn radius" data-number>6</button>
                            <button class="calc_btn radius" data-operation>-</button>
                        </div>

                        <div class="calc_btn_row">
                            <button class="calc_btn radius" data-number>1</button>
                            <button class="calc_btn radius" data-number>2</button>
                            <button class="calc_btn radius" data-number>3</button>
                            <button class="calc_btn radius" data-operation>+</button>
                        </div>

                        <div class="calc_btn_row">
                            <button class="calc_btn double" data-number>0</button>
                            <button class="calc_btn radius" data-number>.</button>
                            <button class="calc_btn radius" data-equals>=</button>
                        </div>

                    </section>
                </div>

            </div>

        </div>

    </div>






    <script src="/bootstrap/js/calculator.js"></script>

</body>

</html>